{
    "compilerOptions": {
        "outDir": "./dist/", // 重定向输出目录。
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入。
        "module": "es6", // 指定生成哪个模块系统代码
        "target": "es2017", // 指定ECMAScript目标版本
        "jsx": "react",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowJs": true //允许ts中引入js
    },
    "include": ["src"]
}
